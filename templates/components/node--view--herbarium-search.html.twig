<article{{ attributes.addClass('teaser lp-block search') }}>

  {{ title_prefix }}
  {% if not page %}
    <h2{{ title_attributes.addClass('lp-block__title')}}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
  {% endif %}
  {{ title_suffix }}

  {% if display_submitted %}
    <footer>
      {{ author_picture }}
      <div{{ author_attributes }}>
        {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
        {{ metadata }}
      </div>
    </footer>
  {% endif %}

  <div{{ content_attributes.addClass("lp-block__content") }}>
    {{ content }}
  </div>

</article>
